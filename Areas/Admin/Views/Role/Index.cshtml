@{
     ViewData["Title"] = "Roles";
}

<div class="container">
    <section class="text-center">
        <h2>Nhãn hiệu</h2>
        <hr>
        <div class="mt-4">
            <table class="table table-striped table-bordered w-100" id="tblBrands" >
                <thead>
                    <tr>
                        <th scope="col"># Id</th>
                        <th scope="col">Tên Role</th>
                        <th scope="col" >Chức năng</th>
                    </tr>
                </thead>
            </table>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#tblBrands").DataTable({
                info: false,
                ajax: "/Admin/Role/GetAllRoles",
                columns: [
                    {
                        data: "id",
                    },
                    {
                        data: "name",
                    },
                    {
                        data: "id",
                        render: function(data, type) {
                            return `<td>
                                <a  href='/Admin/Role/Edit?id=${data}'  class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i>
                                        Chỉnh sửa</a>
                                <a href='#' class='btn btn-danger btn-sm' onclick='return handleDeleteAlert({deleteLink: "/Admin/Role/Delete?id=${data}", redirectLink: "/Admin/Role"})' >Xóa</a>
                            </td>`;
                        }
                    },
                ],
            })
        });
    </script>
}