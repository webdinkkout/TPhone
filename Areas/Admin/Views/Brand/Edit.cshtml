@model Brand;

@{
    ViewData["Title"] = "Brands | Edit";
}

<div class="container">
    <section>
        <h2>Tạo nhãn hiệu</h2>
        <hr>
        <form asp-action="Update" method="POST">
            <input hidden asp-for="Id">
            <input hidden asp-for="SeoName">
            <input hidden asp-for="CreatedAt">
            <div class="form-group">
                <label for="txtName" class="form-label">Tên nhãn hiệu</label>
                <input asp-for="Name" id="txtName" class="form-control" placeholder="Nhập tên nhãn hiệu">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button class="btn btn-primary">Trở về</button>
                <button class="btn btn-success">Lưu</button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial  name="_ValidationScriptsPartial"/>
}