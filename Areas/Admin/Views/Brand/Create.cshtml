@model Brand;

@{
    ViewData["Title"] = "Brands | Create";
}

<div class="container">
    <section>
        <h2>Tạo nhãn hiệu</h2>
        <hr>
        <form asp-action="Create" method="POST">
            <div class="form-group">
                <label for="txtName" class="form-label">Tên nhãn hiệu</label>
                <input asp-for="Name" id="txtName" class="form-control" placeholder="Nhập tên nhãn hiệu">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button class="btn btn-success">Tạo</button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial  name="_ValidationScriptsPartial"/>
}