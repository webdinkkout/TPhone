@model CreateProductCategory;

@{
    ViewData["Title"] = "Product Categories | Create";
    Layout = "_LayoutAdmin";
}

<div class="container">
    <section>
        <h2>Tạo mới danh mục</h2>
        <hr>
        <form asp-action="Create" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="txtName" class="form-label">Tên danh mục</label>
                <input asp-for="Name" id="txtName" class="form-control" placeholder="Nhập tên danh mục">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label class="form-label" for="ulfThumbnail">Thumbnail</label>
                <input name="fileThumbnail" type="file" accept="image/*" id="ulfThumbnail" class="form-control" >
            </div>

            <div class="form-group mt-4">
                <button class="btn btn-success">Tạo</button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial  name="_ValidationScriptsPartial"/>
}